{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}
