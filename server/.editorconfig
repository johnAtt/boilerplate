# top-most EditorConfig file
root = true

# JavaScript files
[*.{js,ts,tsx}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = true

# .json files
[*.{json}]
indent_style = tab
tab_width = 2

# Matches the exact files either package.json or package-lock.json
[{package.json,package-lock.json}]
insert_final_newline = false
